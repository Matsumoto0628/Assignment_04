<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="main row justify-content-center">
  <div class="col-3">
    <h1>User Info</h1>
    <%= form_with model: @user do |f| %>
      <h4>Name</h4>
      <%= f.text_field :name %>
      <h4>Image</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>
      <h4>Introduction</h4>
      <%= f.text_area :introduction %><br>
      <%= f.submit 'Update User', class: 'btn btn-outline-secondary' %>
    <% end %>
  </div>
</div>
